{%- set v2ray = settings.secrets.v2ray %}
image: "v2fly/v2fly-core:${TAG_V2FLY_CORE:-latest}"
restart: unless-stopped
ports:
  - "{{ v2ray.port }}"
command:
  - run
  - -c
  - /etc/v2ray/config.json
volumes:
  - ./config/v2ray/{{ settings.dockers.v2ray.scheme }}.json:/etc/v2ray/config.json
  - ./log/v2ray:/var/log/v2ray
